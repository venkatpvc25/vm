{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake Build",
            "type": "shell",
            "command": "cmake --build build",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Tokenizer",
            "type": "shell",
            "command": "gcc",
            "args": [
                "tokenizer.c",
                "-o",
                "tokenizer",
                "-g"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}